<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- creating configuration for connetion to the database using hibernate -->       
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>    
        <property name="connection.url">jdbc:mysql://localhost:3306/eshop</property>        
        <property name="connection.username">root</property>        
        <property name="connection.password">milindmonu1526</property>     
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hbm2ddl.auto">update</property> 
        <property name="show_sql">true</property>    
        <!-- mapping for the entities for creating new tables
        which is used in the com.mycompany.eshop.helper package for configuration --> 
        <mapping class="com.mycompany.eshop.entities.User" />  
        <mapping class="com.mycompany.eshop.entities.Category" />  
        <mapping class="com.mycompany.eshop.entities.Product" />
        <mapping class="com.mycompany.eshop.entities.ProductImage" />
        <mapping class="com.mycompany.eshop.entities.Orders" />
        <mapping class="com.mycompany.eshop.entities.OrderDetails" />
    </session-factory>
</hibernate-configuration>
